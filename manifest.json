{
    "name": "Verify Me",
    "description": "The easiest way to get verified on Twitter.",
    "version": "0.1",
    "background": {
        "scripts": [ "jquery.js", "main.js" ]
    },
    "permissions": [
        "tabs", "http://twitter.com/*", "https://twitter.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_title": "Gmail Customizations",
        "default_icon": "icons/icon16.png"
    },
    "content_scripts": [
        {
            "matches": [ "http://twitter.com/*", "https://twitter.com/*" ],
            "js": [ "jquery.js", "main.js" ]
        }
    ],
    "manifest_version": 2
}
